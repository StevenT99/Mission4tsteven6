@{
}

@model CalculatorModel;
<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments</label>
    <input id="assignmentsGrade"asp-for="Assignment" /><br />
    <label>Group Project</label>
    <input id="projectGrade" asp-for="GroupProject" /><br />
    <label>Quizzes</label>
    <input id="quizzesGrade" asp-for="Quizzes" /><br />
    <label>Midterm Exam</label>
    <input id="midtermGrade" asp-for="MidtermExam" /><br />
    <label>Final Exam</label>
    <input id="finalGrade" asp-for="FinalExam" /><br />
    <label>INTEX</label>
    <input id="intexGrade" asp-for="INTEX" /><br />
    <input id="calculateGrade" type="submit" value="Calculate" />

    <div asp-validation-summary="All"></div>
</form>
<div>
    <p>Final Percentage: <span id="FinalPercentage" ></span></p>
    <p>Letter Grade: <span id="LetterGrade"></span></p>
</div>

<script src="~/js/GradeCalculator.js"></script>